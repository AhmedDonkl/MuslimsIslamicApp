<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="3" >

        <TextView
            android:id="@+id/textView_event_name"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.25"
            android:background="@drawable/timing_item_bg_nine"
            android:gravity="center"
            android:textColor="#e6cb7e"
            android:textSize="12sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/checkbox_event_timer"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbox_timer_selector" />

        <TextView
            android:id="@+id/textView_event_time"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.75"
            android:background="@drawable/row_item_name_bg_nine"
            android:gravity="center"
            android:textColor="#e6cb7e"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>